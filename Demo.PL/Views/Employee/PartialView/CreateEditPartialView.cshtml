
@model Employee 

@{
    var Departments = new SelectList(ViewBag.Departments, "Id", "Name");
}



<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input class="form-control" asp-for="Name" />
    <span asp-validation-for="Name" class="alert-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label">Image</label>
    <input class="form-control" type="image" name="Image" /> 
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Age"></label>
    <input class="form-control" asp-for="Age" />
    <span asp-validation-for="Age" class="alert-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input class="form-control" asp-for="Salary" />
    <span asp-validation-for="Salary" class="alert-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="department"></label>
    <select class="form-control" asp-items="@Departments" asp-for="DepartmentId">
        <option value="@null"> ------ Select Department ------ </option>
    </select>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="CreationDate"></label>
    <input class="form-control" asp-for="CreationDate" />
    <span asp-validation-for="CreationDate" class="alert-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="HireDate"></label>
    <input class="form-control" asp-for="HireDate" />
    <span asp-validation-for="HireDate" class="alert-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Address"></label>
    <input class="form-control" asp-for="Address" />
    <span asp-validation-for="Address" class="alert-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Phone"></label>
    <input class="form-control" asp-for="Phone" />
    <span asp-validation-for="Phone" class="alert-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Email"></label>
    <input class="form-control" asp-for="Email" />
    <span asp-validation-for="Email" class="alert-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="IsActive"></label>
    <input class="form-check" asp-for="IsActive" />
    <span asp-validation-for="IsActive" class="alert-danger"></span>
</div>