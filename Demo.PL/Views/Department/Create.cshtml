
@model Department

@{
    ViewData["Title"] = "Create";
    // Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create New Department </h1>
<br />



<form asp-action="Create">
    <div class="form-group">
		<label class="col-form-label" asp-for="Code"></label>
        <input class="form-control" asp-for="Code"/>
        <span asp-validation-for="Code" class="alert-danger"></span> 
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="alert-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input class="form-control" asp-for="DateOfCreation" />
        <span asp-validation-for="DateOfCreation" class="alert-danger"></span>
    </div>

    <input type="submit"  value="Submit"/>
    <a asp-action="Index" class="btn btn-danger" > Back to list</a>

</form>

